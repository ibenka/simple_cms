<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">
        <div class="row">
          <div class="col-xs-6">
            <div class="logo">
              <%= image_tag('logo.svg') %>
            </div>
          </div>
          <div class="col-xs-6 logo_text">
            Saucedo<br />
            Brothers
          </div>
        </div>
      </a>
    </div>
    <div id="navbar" class="navbar-collapse navbar-right collapse">
      <ul class="nav navbar-nav">
        <% for item in @menu_items %>
          <% if item.menu_items.count > 0 %>
            <li class="<%= @page && item.page == @page ? 'active' : '' %> dropdown">
              <a href="<%= pagelink_path(item.page.slug) %>" class="dropdown-toggle"><%= item.page.name %> <span class="caret"></span></a>

              <ul class="dropdown-menu">
                <% for menu_item in item.menu_items %>
                  <li><%= link_to menu_item.page.name, pagelink_path(menu_item.page.slug) %></li>
                <% end %>
              </ul>
            </li>
          <% else %>
            <li class="<%= @page && item.page == @page ? 'active' : '' %>">
              <%= link_to item.page.name, pagelink_path(item.page.slug) %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</nav>