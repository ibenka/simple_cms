<div class="nested-fields">
	<% unless f.object.photo.blank? %>
		<div class="image_preview">
			<%= image_tag(f.object.photo.url(:thumb)) %>
		</div>
	<% end %>
	<%= f.input :photo %>
	<br />
	<div class="row">
		<div class="col-sm-6">
			<%= f.input :headline %>
		</div>
		<div class="col-sm-6">
			<%= f.input :caption %>
		</div>
	</div>
	<div class="text-right">
		<%= link_to_remove_association "Delete Image", f %>
	</div>
</div>